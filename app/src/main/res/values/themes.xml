<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Kpark" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:windowBackground">@color/powderBlue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="materialCardViewStyle">@style/Theme.Kpark.CardView</item>
        <item name="materialButtonStyle">@style/Theme.Kpark.MaterialButton</item>
        <item name="android:textViewStyle">@style/Theme.Kpark.TextView</item>
        <item name="checkboxStyle">@style/Theme.Kpark.Checkbox</item>
        <item name="editTextStyle">@style/Theme.Kpark.EditText</item>
        <item name="android:spinnerDropDownItemStyle">@style/Theme.Kpark.SpinnerItem</item>
    </style>

    <style name="Theme.Kpark.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/chefchaouenBlue</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Kpark</item>
    </style>

    <style name="Theme.Kpark.Checkbox" parent="@style/Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/blue</item>
        <item name="android:textColor">@color/powderBlue</item>
    </style>

    <style name="Theme.Kpark.CardView">
        <item name="elevation">5dp</item>
        <item name="cardBackgroundColor">@color/chefchaouenBlue</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="cardElevation">10dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">5dp</item>
    </style>

    <style name="Theme.Kpark.MaterialButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">30dp</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Kpark.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/powderBlue</item>
    </style>

    <style name="Theme.Kpark.EditText" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/powderBlue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="Theme.Kpark.SpinnerItem" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>